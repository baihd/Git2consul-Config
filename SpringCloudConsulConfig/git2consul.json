{
  "version": "1.0",
  //本地仓库备份地址
  "local_store": "/opt/soft/git2consul",
  "logger": {
    "name": "log",
    "streams": [
      {
        "level": "trace",
        "type": "rotating-file",
        //生成日志路径
        "path": "/opt/soft/logs/git2consul.log"
      }
    ]
  },
  "repos": [
    {
      //根目录名称
      "name": "consul-config",
      //远程仓库地址
      "url": "https://github.com/baihd/Git2consul-Config.git",
      //分支信息是否包含到请求中，建议使用
      "include_branch_name": true,
      "branches": [
        //分支名称
        "dev"
      ],
      "hooks": [
        {
          //更新策略定时刷新的
          "type": "polling",
          //1分钟
          "interval": "1"
        }
      ]
    }
  ]
}
